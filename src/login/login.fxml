<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Login">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="loginButton" layoutX="168.0" layoutY="264.0" mnemonicParsing="false" onAction="#login" prefHeight="26.0" prefWidth="239.0" text="Login" />
                        <Label layoutX="57.0" layoutY="51.0" text="Username" />
                        <Label layoutX="58.0" layoutY="120.0" text="Password" />
                        <TextField fx:id="loginUsernameTextField" layoutX="318.0" layoutY="47.0" prefHeight="26.0" prefWidth="202.0" promptText="username" />
                        <TextField fx:id="loginPasswordTextField" layoutX="318.0" layoutY="115.0" prefHeight="26.0" prefWidth="202.0" promptText="password" />
                        <Label fx:id="loginMessageLabel" layoutX="166.0" layoutY="221.0" prefHeight="18.0" prefWidth="241.0" textFill="#ec3838" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Sign up">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="67.0" layoutY="177.0" text="password" />
                        <TextField fx:id="signupEmailTextField" layoutX="300.0" layoutY="116.0" prefHeight="16.0" prefWidth="202.0" promptText="email" />
                        <Label layoutX="66.0" layoutY="62.0" text="Username" />
                        <Label layoutX="78.0" layoutY="120.0" text="Email" />
                        <TextField fx:id="signupUsernameTextField" layoutX="300.0" layoutY="58.0" prefHeight="16.0" prefWidth="202.0" promptText="username" />
                        <TextField fx:id="signupPasswordTextField" layoutX="300.0" layoutY="173.0" prefHeight="16.0" prefWidth="202.0" promptText="password" />
                        <Button layoutX="169.0" layoutY="301.0" mnemonicParsing="false" onAction="#signUp" prefHeight="26.0" prefWidth="239.0" text="Sign up" />
                        <Label fx:id="signupMessageLabel" layoutX="168.0" layoutY="267.0" prefHeight="18.0" prefWidth="242.0" textAlignment="CENTER" textFill="#f72c2c" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
