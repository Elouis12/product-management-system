<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="user.EditController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="6.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="32.0" text="Edit">
                     <HBox.margin>
                        <Insets left="250.0" />
                     </HBox.margin>
                  </Label>
                  <Label prefHeight="18.0" prefWidth="32.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="0.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="18.0" prefWidth="600.0">
                     <children>
                        <Label text="Product Id">
                           <HBox.margin>
                              <Insets left="150.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="productIdEditTextField" prefHeight="26.0" prefWidth="209.0" promptText="product id">
                           <HBox.margin>
                              <Insets left="70.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="18.0" prefWidth="600.0">
                     <children>
                        <Label text="Product Name">
                           <HBox.margin>
                              <Insets left="150.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="productNameEditTextField" prefHeight="26.0" prefWidth="209.0" promptText="product name">
                           <HBox.margin>
                              <Insets left="50.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="18.0" prefWidth="600.0">
                     <children>
                        <Label text="Category">
                           <HBox.margin>
                              <Insets left="150.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="categoryEditTextField" prefHeight="26.0" prefWidth="209.0" promptText="category">
                           <HBox.margin>
                              <Insets left="80.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="18.0" prefWidth="600.0">
                     <children>
                        <Label text="Price">
                           <HBox.margin>
                              <Insets left="150.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="priceEditTextField" prefHeight="26.0" prefWidth="209.0" promptText="price">
                           <HBox.margin>
                              <Insets left="100.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="editItemMessageLabel" prefHeight="18.0" prefWidth="253.0" textFill="#e72c2c">
                     <VBox.margin>
                        <Insets left="200.0" right="200.0" />
                     </VBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#updateItem" prefHeight="26.0" prefWidth="314.0" text="Update Item">
                     <VBox.margin>
                        <Insets left="200.0" right="200.0" top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="261.0" text="Clear">
                     <VBox.margin>
                        <Insets left="200.0" right="200.0" top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
